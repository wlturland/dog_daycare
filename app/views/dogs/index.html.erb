<p id="notice"><%= notice %></p>

<h1>Listing Dogs</h1>

<table class = 'table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Breed</th>
      <th>Date of Birth</th>
      <th>Vet</th>
      <th>Vet phone</th>
      <th>In daycare</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %> <%= dog.owner.last_name %></td>
        <td><%= dog.breed.breed %></td>
        <td><%= dog.dob %></td>
        <td><%= dog.vet %></td>
        <td><%= dog.vet_phone %></td>
        <td><%= dog.in_daycare %></td>
        <td><%= link_to content_tag(:i, nil, class: "fa fa-eye"), dog %></td>
        <td><%= link_to content_tag(:i, nil, class: "fa fa-pencil"), edit_dog_path(dog) %></td>
        <td><%= link_to content_tag(:i, nil, class: "fa fa-trash-o"), dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

